<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
   <display-name>RestProject</display-name>

   <servlet>
	    <servlet-name>Jersey REST Service</servlet-name>
	    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
	    <init-param>
	      <param-name>jersey.config.server.provider.packages</param-name>
	      <param-value>com.varun.Api</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
	    <servlet-name>Jersey REST Service</servlet-name>
	    <url-pattern>/*</url-pattern>
   </servlet-mapping>
  
   <servlet>
	    <servlet-name>email</servlet-name>
	    <servlet-class>ApiEndpoint.EmailApiServlet</servlet-class>
   </servlet>
   <servlet-mapping>
	    <servlet-name>email</servlet-name>
	    <url-pattern>/EmailApi/*</url-pattern>
   </servlet-mapping>
   <servlet>
       <servlet-name>servlet1</servlet-name>
       <servlet-class>ApiEndpoint.MobileApiServlet</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>servlet1</servlet-name> 
       <url-pattern>/MobileApi/*</url-pattern>
   </servlet-mapping>
</web-app>